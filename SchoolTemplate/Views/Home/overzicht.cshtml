@using SchoolTemplate.Database;
@model List<Festival>
@{
    ViewData["Title"] = "Overzicht";
}

<h1> Overzicht </h1>
<p>
  hier vind je een overzicht van alle festivals...  
</p>

<div class="body-margin">
    <div class="container">
        @foreach (Festival f in Model)
        {
            <div class="box1">
                <div class="boxtitle">
                    <h1>@f.Naam</h1>
                </div>
                <div class="boxtext">
                    <p>Datum: @f.Start_dt.ToString("D") - @f.Eind_dt.ToString("D")</p>
                    <p>Beschrijving: @f.Beschrijving </p>
                </div>
            </div>
        }
    </div>
</div>
