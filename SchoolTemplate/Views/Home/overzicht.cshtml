@using SchoolTemplate.Database;
@model List<Festival>
@{
    ViewData["Title"] = "Overzicht";
}

<div class="body-margin">
    <div class="background.ov"></div>
    <div class="container.ov">
        @foreach (Festival f in Model)
        {
            <div class="box1">
                <div class="boxtitle">
                    <h1>Naam: @f.Naam</h1>
                </div>
                <div class="boxtext">
                    <p>Datum: @f.Start_dt - @f.Eind_dt</p>
                    <p>Beschrijving: @f.Beschrijving </p>
                </div>
            </div>
        }
    </div>
</div>
